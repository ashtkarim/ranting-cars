generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:mysecretpassword@localhost:3306/ranting_db"
}


model User {
  id        String   @id @default(uuid()) @db.VarChar(36)
  firstName String
  lastName  String
  email     String   @unique
  password  String
  status    String   @default("Normal")
  verified  Boolean  @default(false) 
  
  cars      Car[]
  rentals   Rental[]
}


model Car {
  id            String     @id @default(uuid()) @db.VarChar(36)
  make          String  
  model         String   
  year          Int      
  color         String   
  price         Float    
  mileage       Int?     
  vin           String   @unique     
  imageUrl      String
  ownerId  String 
  owner    User   @relation(fields: [ownerId], references: [id])

  rentals       Rental[]

}

model Rental {
  id            String       @id @default(uuid()) @db.VarChar(36)
  userId        String
  carId         String
  startDate     DateTime
  endDate       DateTime
  totalAmount   Float
  status        RentalStatus @default(RESERVED)

  user          User      @relation(fields: [userId], references: [id])
  car           Car       @relation(fields: [carId], references: [id])
}


enum RentalStatus {
  RESERVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}