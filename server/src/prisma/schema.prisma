generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:mysecretpassword@localhost:3306/ranting_db"
}


model User {
  id        String   @id @default(uuid()) @db.VarChar(36)
  firstName String
  lastName  String
  email     String   @unique
  password  String
  status    String   @default("Normal")
  verified  Boolean  @default(false) 
  
  cars      Car[]
}


model Car {
  id            String     @id @default(uuid()) @db.VarChar(36)
  make          String  
  model         String   
  year          Int      
  color         String   
  price         Float    
  mileage       Int?     
  vin           String   @unique     

  ownerId  String 
  owner    User   @relation(fields: [ownerId], references: [id])

}